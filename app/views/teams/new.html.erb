<div class="container">
    <h1>Add a Team</h1>
    
    <div class="row">
        <div class="col-md-8">
        <%= form_for @team do |f| %>
            <div class="form-group">
                <%= f.label :city %>
                <%= f.text_field :city, class: 'form-control', placeholder: "Enter Team City" %>
            </div>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control', placeholder: "Enter Team Name" %>
            </div>
            <div class="form-group">
                <%= f.label :predictive %>
                <%= f.text_field :total, class: 'form-control', placeholder: "Vegas Wins" %>
            </div>
            <div class="form-group">
                <%= f.label :actual %>
                <%= f.text_field :total, class: 'form-control', placeholder: "Actual Wins" %>
            </div>
            <div class="form-group">
                <%= f.label :over %>
                <%= f.check_box :over, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :coach %>
                <%= f.text_field :coach, class: 'form-control', placeholder: "Coach?" %>
            </div>
        <%= f.submit "Save", class: 'btn btn-success' %>
        <% end %>
            </div>
        </div>
    </div>
</div>